{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "module": "es6",
    "target": "ESNext",

    "lib": [
      "ESNext", "dom"
    ],
    "moduleResolution": "node",
    "strict": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports" : true,
    "rootDirs": ["./client", "./shared"],
    "outDir": "./public/dist/",
    "typeRoots": [
      "./node_modules/@types",
      "./custom-typings"
    ]
  },
  "include": [
    "./client/**/*.ts",
    "./shared/**/*.ts",
    "./client/**/*.js"
  ],
  "exclude": [
    "dist",
    "public"
  ]
}

