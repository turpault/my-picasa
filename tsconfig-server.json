{
  "lib": ["es2015"],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowJs": true,
    "rootDirs": ["./server", "./shared"],
  },
  "include": [
    "./server/**/*.ts",
    "./shared/**/*.ts",
    "./custom-typings"
  ],
  "exclude": [
    "dist",
    "public"
  ]
}

