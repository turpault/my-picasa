{
  "name": "picisa",
  "version": "1.1.0",
  "description": "Picasa replacement in pure JS",
  "author": "Jocelyn Turapult (turpault@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/turpault/my-picasa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:turpault/my-picasa.git"
  },
  "files": [
    "dist/src"
  ],
  "testGlob": "./dist/test/**/*.spec.js?(x)",
  "homepage": "https://github.com/turpault/my-picasa#readme",
  "keywords": [
    "typescript",
    "picasa",
    "album",
    "photoshop",
    "gallery",
    "tdd"
  ],
  "main": "dist/server/main.js",
  "browser": "dist/src/index.js",
  "scripts": {
    "build": "tsc -d -p tsconfig-server.json && npm run build-filters && run-p build:*",
    "build:client": "webpack",
    "build:icons": "png2icons resources/picisa.png resources/picisa -icns",
    "build:ico": "png2icons resources/picisa.png public/favicon -ico",
    "build:splashbase64url": "node server/toBase64Url.mjs public/resources/images/splash.png",
    "build:rpc": "node dist/server/rpc/generate.js client/rpc/generated-rpc",
    "build-filters": "(cd server/rpc/imageOperations/native-filters ; npm run configure ; npm run build) ; mkdir -p dist/server/rpc/imageOperations/native-filters/build/Release ; cp server/rpc/imageOperations/native-filters/build/Release/lut3d.node dist/server/rpc/imageOperations/native-filters/build/Release/lut3d.node",
    "package": "electron-packager . --icon resources/picisa.icns --app-version 1.0.0 --appname Picisa --no-deref-symlinks --overwrite --ignore='\\.d\\.ts|\\.map'",
    "deploy": "osascript -e 'do shell script \"rm -rf /Applications/picisa.app ; cp -Rf  picisa-darwin-x64/picisa.app /Applications/\" with administrator privileges'",
    "clean": "rimraf dist",
    "reset": "rimraf node_modules dist",
    "start": "PICISA_PICTURE_FOLDER=/Volumes/1TB\\ USB/Photos run-p start:*",
    "start:webpack": "webpack --watch --progress --mode development",
    "start:tsc-server": "tsc-watch -p tsconfig-server.json",
    "start:server": "nodemon --watch ./dist/server --watch ./dist/shared dist/server/index.js",
    "start-fav": "ts-node --esm server/rpc/rpcFunctions/fileJob-export-favorites.ts",
    "electron": "electron ."
  },
  "devDependencies": {
    "@types/draggabilly": "^2.1.3",
    "@types/ini": "^1.3.31",
    "@types/leaflet": "^1.7.9",
    "@types/node": "^16",
    "@types/sharp": "^0.29.2",
    "@types/web": "^0",
    "@types/ws": "^7.4.1",
    "cross-var": "^1",
    "electron": "^15.3.1",
    "electron-packager": "^15.4.0",
    "glob": "^7",
    "http-server": "^13.0.2",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "png2icons": "^2.0.1",
    "prettier": "2.2.1",
    "rimraf": "^3",
    "source-map-support": "^0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.7.0",
    "tsc-watch-2": "^0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "util": "^0.12.4",
    "wait-on": "^6",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1"
  },
  "peerDependencies": {
    "tslib": "^2"
  },
  "dependencies": {
    "@fastify/static": "^5.0.0",
    "@fastify/websocket": "^5.0.0",
    "@sentry/browser": "^7.32.1",
    "@sentry/node": "^7.24.2",
    "@sentry/tracing": "^7.32.1",
    "chalk": "^4.1.2",
    "cli-spinners": "^2.7.0",
    "draggabilly": "^3.0.0",
    "exifr": "^7.1.3",
    "fast-exif": "^1.0.1",
    "fastify": "^3.22.1",
    "ffmpeg-static": "^5.1.0",
    "image-size": "^1.0.2",
    "js-base64": "^3.7.4",
    "leaflet": "^1.9.3",
    "panzoom": "^9.4.3",
    "sharp": "^0.31.2",
    "spinnies": "^0.5.1",
    "ts-2d-geometry": "^6.3.2",
    "ws": "^8.12.0"
  }
}
