{
  "name": "my-picasa",
  "version": "0.0.1",
  "description": "My picasa replacement in pure JS",
  "author": "Jocelyn Turapult (turpault@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/turpault/my-picasa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:turpault/my-picasa.git"
  },
  "files": [
    "dist/src"
  ],
  "testGlob": "./dist/test/**/*.spec.js?(x)",
  "homepage": "https://github.com/turpault/my-picasa#readme",
  "keywords": [
    "typescript",
    "tdd"
  ],
  "main": "dist/server/main.js",
  "browser": "dist/src/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:client": "tsc -d",
    "build:server": "tsc -d -p tsconfig-server.json",
    "build:rpc": "node dist/server/rpc/generate client/rpc/generated-rpc",
    "package": "electron-packager . --overwrite --ignore='\\.d\\.ts|\\.map'",
    "clean": "rimraf dist",
    "reset": "rimraf node_modules dist",
    "start": "run-p start:*",
    "start:tsc": "tsc-watch",
    "start:tsc-server": "tsc-watch -p tsconfig-server.json",
    "start:httpd": "nodemon --watch ./dist/server --watch ./dist/shared dist/server/index.js",
    "electron": "electron ."
  },
  "devDependencies": {
    "@types/ini": "^1.3.31",
    "@types/sharp": "^0.29.2",
    "@types/web": "^0",
    "@types/ws": "^7.4.1",
    "cross-var": "^1",
    "electron": "^15.3.1",
    "electron-packager": "^15.4.0",
    "glob": "^7",
    "http-server": "^13.0.2",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "rimraf": "^3",
    "source-map-support": "^0",
    "ts-node": "^10",
    "tsc-watch-2": "^0",
    "tslib": "^2.3.1",
    "typescript": "^4",
    "util": "^0.12.4",
    "wait-on": "^6"
  },
  "peerDependencies": {
    "tslib": "^2"
  },
  "dependencies": {
    "@types/node": "^16",
    "exifreader": "^4.0.0",
    "fast-exif": "^1.0.1",
    "fastify": "^3.22.1",
    "fastify-static": "^4.4.2",
    "infinite-list": "^1.1.0",
    "ini": "^2.0.0",
    "sharp": "^0.29.2",
    "wasm-vips": "^0.0.1",
    "ws": "^8.2.3",
    "xml2js": "^0.4.23"
  }
}
