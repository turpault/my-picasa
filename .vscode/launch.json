{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "start"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Launch Worker",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start-worker"
      ],
      "env": {
        "DEBUG": "*,-redis:*,-ioredis:*"
      },
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Current TS file",
      "program": "${file}",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${fileDirname}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
      "type": "node",
      "console": "integratedTerminal"
    },
    {
      "name": "Start favorite to iPhoto",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start-fav"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Start server",
      "program": "${workspaceFolder}/server/index.ts",
      "request": "launch",
      "args": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "PICISA_PICTURE_FOLDER": "/Volumes/1TB USB/Photos"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
  ]
}